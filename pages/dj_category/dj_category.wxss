/* pages/dj_category/dj_category.wxss */
.dj_category {
  width: 100%;
}

.title {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}

.category_list {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}

.category_item_box {
  width: 50%;
  box-sizing: border-box;
  height: 100rpx;
  padding: 20rpx 0;
  border-top: 1px solid #ddd;
}

.category_item {
  width: 90%;
  height: 60rpx;
  text-align: center;
}

.category_item_box:nth-child(2n+1) .category_item {
  border-right: 1px solid #ddd;
}