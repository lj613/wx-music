/* pages/dj_pay/dj_pay.wxss */
.pay_container{
  width: 100%;
}
.pay_list{
width: 100%;
padding: 0 20rpx ;
/* border: 1px solid pink; */
box-sizing: border-box;

}
.pay_item{
  width: 100%;
  display: flex;
  margin-bottom: 30rpx;
}
.pay_image{
  width: 250rpx;
  height: 250rpx;
  /* border: 1px solid black; */
}
.info{
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  box-sizing: border-box;
  /* border: 1px solid plum; */
}
.pay_name{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-weight: 500;
}
.rcmdText{
  margin-top: 10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 28rpx;
  color: #505d6b;
}