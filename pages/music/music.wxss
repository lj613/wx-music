/* 搜索部分 */
.search_container{
  width: 100%;
  height: 120rpx;
  background-color: #31c27c ;
  padding: 20rpx;
  box-sizing: border-box;
}
.search{
  width: 100%;
  height: 80rpx;
  display: flex;
  /* font-size: 0; */
  border-radius: 60rpx;
  /* color: white; */
  background-color: rgba(255, 255, 255,.4);
  /* border: 1px solid black; */
}
.search_input{
  flex: 1;
  height: 80rpx;
  /* background-color: pink; */
  /* padding: 0 40rpx; */
  /* box-sizing: border-box; */
   /* overflow: hidden; */
}
.search_input .input{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
  color: white;
}
.search_button{
  overflow: hidden;
  width: 80rpx;
  height: 80rpx;
  /* background-color: plum; */
  position: relative;
  margin-right: 20rpx;
}
.icon-search{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  font-size: 60rpx;
  color: #fff;
}
