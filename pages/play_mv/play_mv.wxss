/* pages/play_mv/play_mv.wxss */
@import '/icon/icon.wxss';

.mv_box {
  width: 100%;
  height: 480rpx;
  margin-top: -2rpx;
}

.mv {
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}

.mv_name {
  margin-top: 20rpx;
  margin-left: 20rpx;
  font-size: 40rpx;
  font-weight: 550;
}

.mv_times {
  margin-top: 20rpx;
  margin-left: 20rpx;
  font-size: 28rpx;
}

.mv_time {
  margin-left: 20rpx;
  margin-top: 40rpx;
  font-size: 28rpx;
  color: #979798;
}

.mv_desc_container {
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.mv_desc {
  margin-bottom: 20rpx;
  color: #6A6B6C;
  line-height: 46rpx;
  font-size: 24rpx;
}

.icons {
  margin-top: 70rpx;
  display: flex;
  height: 100rpx;
  text-align: center;
  box-sizing: border-box;
}

.icon {
  flex: 1;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.iconfont {
  font-size: 60rpx;
  color: black;
}

.number {
  font-size: 24rpx;
  color: #6A6B6C;
}