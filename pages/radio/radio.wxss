/* 电台图片轮播样式 */
.swiperContainer {
  width: 100%;
  padding: 0 20rpx;
  margin: 0 auto;
  height: 300rpx;
  border-radius: 10rpx;
  overflow: hidden;
  box-sizing: border-box;
}

.swiperContainer image {
  width: 100%;
  height: 100%;
}

/* 功能按钮部分 */
.banner {
  margin-top: 40rpx;
  height: 180rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #EDEEF0;
  box-sizing: border-box;
}


.banner_Item {
  width: 150rpx;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon_box {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  background-color: #31c27c;
  position: relative;
}

.icon_pos {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 70rpx;
  color: #fff;
}

.msg {
  font-size: 22rpx;
  margin-top: 10rpx;
}

/* 电台首页推荐内容样式 */
.recommend_item_box {
  margin-top: 25rpx;
  width: 100%;
}

.title_container {
  display: flex;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 20rpx;
  justify-content: space-between;
  box-sizing: border-box;
}

.recommend_item_title {
  font-size: 34rpx;
  font-weight: bold;
}

.change_box {}

.icon-change {
  font-size: 36rpx;
  color: #8a8a8a;
  margin-right: 10rpx;
}

.changetext {
  font-size: 13px;
  color: #8a8a8a;
}

.songsheet_items_box {
  margin-top: 10rpx;
  width: 100%;
  display: flex;
  box-sizing: border-box;
}

.songsheet_item_box {
  width: 33%;
}

.songsheet_container_image {
  width: 95%;
  height: 220rpx;
  margin: 5rpx;
  border-radius: 8rpx;
}

.songsheet_container_text {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  font-size: 13px;
  margin-top: 10rpx;
  padding-left: 10rpx;
}

.newsong_artists {
  font-size: 10px;
  padding-left: 10rpx;
  padding-top: -10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}