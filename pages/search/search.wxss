/* pages/search/search.wxss */
@import '/icon/icon.wxss';

/* 搜索部分 */
.search_container{
  width: 100%;
  height: 100rpx;
  background-color: #31c27c ;
  padding: 20rpx 0 20rpx 20rpx;
  box-sizing: border-box;
  display: flex;
}
.search{
  flex: 1;
  height: 60rpx;
  display: flex;
  border-radius: 35rpx;
  box-sizing: border-box;
  background-color: rgba(255, 255, 255,.4);
}
.search_input{
  flex: 1;
  height: 60rpx;
}
.search_input .input{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  box-sizing: border-box;
  color: white;
  font-size: 28rpx;
}
.search_button{
  width: 60rpx;
  height: 60rpx;
  position: relative;
}
.icon-search{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  font-size: 45rpx;
  color: #fff;
}
.clear_box{
  margin-right: 10rpx;
  width: 50rpx;
  height:60rpx ;
  text-align: center;
  line-height: 60rpx;
}
.icon-clear{
  font-size:26rpx ;
  color: #eee;
}
.cancle{
  width: 100rpx;
  height:60rpx ;
  text-align: center;
  line-height: 60rpx;
}
.hot_keys {
  padding: 30rpx 30rpx 20rpx 30rpx;
}

/* 热门搜索 */
.header_view_hide{
  display: none;
}
.title {
  color: #31c27c ;
  font-size: 30rpx;
  font-weight: 800
}
.hot_key_box{
  display: flex;
  /* flex-flow 属性是 flex-direction 和 flex-wrap 属性的复合属性。 */
  flex-flow: row wrap;
}
.hot_keys_item{
  font-size: 14px;
  color: #31c27c;
  background-color: #EDEEF0;
  border-radius: 15rpx;
  padding: 15rpx;
  margin: 10rpx;
}

/* 搜索历史 */
.search_history{
  margin: 0rpx 35rpx 0rpx 35rpx;
  margin-top: 40rpx;
}
.title_box{
  display: flex;
  justify-content: space-between;
}
.delete_box{
}
.icon-delete{
  color: #31c27c ;
  font-size: 40rpx;
  font-weight: 800
}

/* 搜索结果显示 */
.search_result_songs{
  width: 100%;
  height: 100%;
}
.search_result_song_item{
   display: block;
   margin: 15rpx;
   border-bottom: 1px solid #EDEEF0;
}
.search_result_song_name{
  font-size: 15px;
  color: #000000;
  margin-bottom: 15rpx;
}
.search_result_song_art-album{
  font-size: 11px;
  color: #000000;
  font-weight:lighter;
  margin-bottom: 5rpx;
}

/* 视频页 */

.video_list .search_result_video{
width: 100%;
height: 100%;
}
.video_list .search_result_video_item{
  display: flex;
  margin: 15rpx;
}
.video_list .image_box{
  width: 225rpx;
  height: 160rpx;
  border-radius: 8rpx;
}
.video_list .image_box image{
  width: 100%;
  height: 100%;
}
.video_list .info{
  width:65% ;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 10rpx;
}
.info .title{
  font-size:32rpx;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color:black;
}
.creator{
  margin-top:10rpx;
 font-size: 24rpx;
 color: #ddd;
}

