/* 搜索结果tab栏 */
.tab-h {
  height: 100rpx;
  width: 100%;
  box-sizing: border-box;
  line-height: 90rpx;
  background: #F7F7F7;
  font-size: 16px;
  white-space: nowrap;
  border-bottom: 0.5rpx solid #eee;
}
.tab-item {
  margin: 0 36rpx;
  display: inline-block;
}
.tab-item.active {
  color: #31c27c ;
  position: relative;
}
.tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 100%;
  background: #31c27c ;
  position: absolute;
  bottom: 0;
  border-radius: 16rpx;
}

