.sheet_page{
  width: 100%;
}

/* 顶部导航 */
.tab-h {
    height: 100rpx;
    width: 100%;
    box-sizing: border-box;
    line-height: 90rpx;
    font-size: 16px;
    white-space: nowrap;
    border-bottom: 0.5rpx solid #eee;
  }

.tab-item {
  margin: 0 36rpx;
  display: inline-block;
}

.tab-item.active {
  color: #31c27c ;
  position: relative;
}

.tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 100%;
  background: #31c27c ;
  position: absolute;
  bottom: 0;
  border-radius: 16rpx;
}

/* 主体内容 */
.tab-content {
  width: 100%;
}
.scoll-h {
  height: 100%;
}
.songsheet_container{
  margin-top: 25rpx;
}
.songsheet_container_title{
font-size: 17px;
font-weight: bold;
padding-left: 10rpx;
}
.songsheet_items_box{
display: flex;
padding: 0 10rpx;
flex-wrap: wrap;
justify-content: space-between;
}
.songsheet_item_box{
 width: 32%;
padding-top: 10rpx;
margin-bottom: 40rpx;
}
.songsheet_image{
width: 95%;
height: 220rpx;
margin: 5rpx;
border-radius: 8rpx;
}
.songsheet_text{
width: 95%;
overflow : hidden;
text-overflow: ellipsis;
display: -webkit-box;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;
font-size: 26rpx;
margin-top: 10rpx;
padding-left: 10rpx;
}